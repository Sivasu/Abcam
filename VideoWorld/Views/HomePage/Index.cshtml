@model VideoWorld.Models.HomePageModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="cart">
   @Model.Cart.Count item(s) in your cart.
</div>

<div class="movies">
@foreach (var item in Model.Movies) {    
    <div class="movie">
        <span class="title">@item.GetDisplayName()</span>
        <form method="post" action="/cart">
			<select id="period" name="period">
				@for (var i = 1; i < 11; i++)
				{
					<option value="@i">@i</option>
				}
			</select>
			<input type="submit" class="addToCart" name="addToCart" value="Add"/>
			<input type="hidden" name="title" value="@item.Title"/>
			<input type="hidden" name="isNew" id="isNew" value="@item.IsNew" />

		</form>
    </div>
}
</div>